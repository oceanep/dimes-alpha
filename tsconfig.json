{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": [
      "DOM",
      "ES2019.Array",
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "target": "esnext",
    "baseUrl": ".",
    "paths": {
      "shared-react": ["node_modules/react"]
    }
  },
  "include": [
    "./src/"
  ],
  "exclude": [
    "node_modules",
    "babel.config.js",
  ]
}
